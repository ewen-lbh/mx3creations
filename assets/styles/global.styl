html
  --prim white
  --text black

:not(p) li
  list-style none

body
pre
code
  font-family Inconsolata, monospace
  background-color var(--prim)
  color var(--text)
  transition background-color 0.5s ease

pre
  margin-bottom 0

body
  min-height 100vh
  margin 0
  font-weight 100

main
  min-width 75vw

h1
  font-size min(7.5vmin, 2rem)
  text-align center
  margin 0

h2
  font-size min(3vmin, 1.5rem)
  font-family: Work Sans, monospace

p, summary
  line-height 1.5
  a
    transition: all 0.25s ease

section:not([fullwidth])
  max-width 800px
  margin 0 auto
  &[wide]
    max-width: min(1200px, 100vw)

ul
  padding-left 0

a
  text-decoration none
  color inherit
p a
  border-bottom .1em solid var(--text)
p a:hover
  color var(--prim)
  background var(--text)

@media (max-width 1200px)
  .-desktop
    display none !important

@media (min-width 1201px)
  .-mobile
    display none !important

details
  // Hide native toggle
  summary::-webkit-details-marker
    display none
  summary
    list-style none
  // Toggle text content
  summary::after
    content 'En savoir plus...'
  &[open] summary::after
    content 'Afficher moins'
  // Toggle syling
  summary::after
    font-weight bold
    cursor pointer
    font-size 1.2em
    font-style italic
    opacity 0.5
    transition opacity 0.25s ease
  &:hover summary::after
    opacity 1
    
  // Animation
  &[open] summary ~ *
    animation sweep .25s ease-in
    @keyframes sweep
      from
        margin-left -10px
        opacity 0

      to
        margin-left 0
        opacity 1

label
  font-size 1.2em

textarea, input
  background transparent
  border 1px solid var(--text)
  box-shadow none
  color var(-text)
  font-family Inconsolata
  font-size inherit
  padding 0.5em

button
  cursor pointer
